<Window x:Class="SpinningButtonAnimationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <Label Content="Interesting..." Height="250" Style="{StaticResource GrowingLabelStyle}"/>
        <Button x:Name="btnSpinner" Height="50" Width="100" Content="I Spin!" MouseEnter="btnSpinner_MouseEnter" Click="btnSpinner_Click"/>
        <Button Name="myButton" Height="40" FontSize="16pt" FontFamily="Verdana" Width="100" Margin="0,100,0,0" Style="{StaticResource ButtonLoadingStyle}"/>
    </StackPanel>
</Window>
